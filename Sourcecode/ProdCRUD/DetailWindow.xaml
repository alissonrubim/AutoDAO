<Window x:Class="ProdCRUD.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProdCRUD"
        mc:Ignorable="d"
        Title="Produto" Height="211.188" Width="414.221">
    <StackPanel>
        <StackPanel>
            <Label>Código</Label>
            <TextBox x:Name="txtCodigo" Text="{Binding Path=Codigo}" Margin="10,0"></TextBox>
            <Label>Descrição</Label>
            <TextBox x:Name="txtDescicao" Text="{Binding Path=Descricao}" Margin="10,0"></TextBox>
            <Label>Preço</Label>
            <TextBox x:Name="txtPreco" Text="{Binding Path=Preco}" Margin="10,0"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Height="50"  HorizontalAlignment="Right">
            <Button x:Name="btnConfirm" Height="20" Margin="0,0,10,0" Click="btnConfirm_Click">Confirmar</Button>
            <Button x:Name="btnCancel" Height="20" Margin="0,0,10,0" Click="btnCancel_Click">Cancelar</Button>
        </StackPanel>
    </StackPanel>
</Window>
